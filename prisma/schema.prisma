generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// -------------------- USER --------------------
model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  phoneNumber   String?   @unique
  address       String?
  status        String?   // e.g., "active", "inactive"
  password      String?
  roleId        Int       @default(1) // 1=Student, 2=Teacher, 3=Admin
  role          Role
  profileImage  String?
  bio           String?
  dateOfBirth   DateTime?
  gender        String?
  isVerified    Boolean   @default(false)
  lastLogin     DateTime?
  preferences   Json?
  notifications Json?
  resetToken        String? 
  resetTokenExpiry  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime?  @updatedAt

  // Relations
  createdCourses Course[]      @relation("InstructorCourses") // courses this instructor created
  enrollments    Enrollment[] // courses student enrolled
  quizAttempts   QuizAttempt[] // attempts by student
}

// -------------------- ROLE ENUM --------------------
enum Role {
  student
  teacher
  admin
}

// -------------------- COURSE --------------------
model Course {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  teacherId   Int
  teacher     User         @relation("InstructorCourses", fields: [teacherId], references: [id])
  enrollments Enrollment[]
  quizzes     Quiz[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

// -------------------- ENROLLMENT --------------------
model Enrollment {
  id         Int      @id @default(autoincrement())
  userId     Int
  courseId   Int
  user       User     @relation(fields: [userId], references: [id])
  course     Course   @relation(fields: [courseId], references: [id])
  enrolledAt DateTime @default(now())

  @@unique([userId, courseId]) // prevent duplicate enrollments
}

// -------------------- QUIZ --------------------
model Quiz {
  id        Int           @id @default(autoincrement())
  title     String
  courseId  Int
  course    Course        @relation(fields: [courseId], references: [id])
  attempts  QuizAttempt[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

// -------------------- QUIZ ATTEMPT --------------------
model QuizAttempt {
  id          Int      @id @default(autoincrement())
  userId      Int
  quizId      Int
  user        User     @relation(fields: [userId], references: [id])
  quiz        Quiz     @relation(fields: [quizId], references: [id])
  score       Float?
  attemptedAt DateTime @default(now())

  @@unique([userId, quizId]) // optional: one attempt per quiz per student
}
