generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// -------------------- USER --------------------
model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  phoneNumber   String?   @unique
  address       String?
  status        String?   // e.g., "active", "inactive"
  password      String?
  roleId        Int       @default(1) // 1=Student, 2=Teacher, 3=Admin
  role          Role
  profileImage  String?
  bio           String?
  dateOfBirth   DateTime?
  gender        String?
  isVerified    Boolean   @default(false)
  lastLogin     DateTime?
  resetToken    String?
  preferences   Json?
  notifications Json?
  resetTokenExpiry  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime?  @updatedAt

  // Relations
  createdCourses Course[]      @relation("InstructorCourses") // courses this instructor created
  enrollments    Enrollment[] // courses student enrolled
  quizAttempts   QuizAttempt[] // attempts by student
}

// -------------------- ENUM --------------------
enum Role {
  student
  teacher
  admin
}

enum CourseType {
  LABORATORY
  LECTURE
}

// -------------------- COURSE --------------------
model Course {
  id             String   @id

  // Academic identity
  code           String    @unique              // e.g. CS101
  title          String
  description    String?

  // Schedule
  startTime      DateTime
  endTime        DateTime
  days           String                       // e.g. "MWF", "TTH"
  room           String?  @default("TBA")

  // Classification
  type           CourseType                   // LECTURE or LAB
  units          Int
  block          String                       // e.g. BSCS-2A
  semester       Int
  schoolYear     String                       // e.g. 2024-2025

  // Capacity & status
  maxStudents    Int
  isActive       Boolean   @default(true)

  // Instructor
  teacherId      Int?
  teacher        User?      @relation("InstructorCourses", fields: [teacherId], references: [id])

  // Relations
  enrollments    Enrollment[]
  quizzes        Quiz[]

  // Audit
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([teacherId])
  @@index([semester, schoolYear])
}


// -------------------- ENROLLMENT --------------------
model Enrollment {
  id         Int      @id @default(autoincrement())
  userId     Int
  courseId   String
  user       User     @relation(fields: [userId], references: [id])
  course     Course   @relation(fields: [courseId], references: [id])
  enrolledAt DateTime @default(now())

  @@unique([userId, courseId]) // prevent duplicate enrollments
}

// -------------------- QUIZ --------------------
model Quiz {
  id        Int           @id @default(autoincrement())
  title     String
  courseId  String
  course    Course        @relation(fields: [courseId], references: [id])
  attempts  QuizAttempt[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

// -------------------- QUIZ ATTEMPT --------------------
model QuizAttempt {
  id          Int      @id @default(autoincrement())
  userId      Int
  quizId      Int
  user        User     @relation(fields: [userId], references: [id])
  quiz        Quiz     @relation(fields: [quizId], references: [id])
  score       Float?
  attemptedAt DateTime @default(now())

  @@unique([userId, quizId]) // optional: one attempt per quiz per student
}
